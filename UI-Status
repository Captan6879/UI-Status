c.CornerRadius = UDim.new(0,15)

local avatar = Instance.new("ImageLabel", profile)
avatar.Size = UDim2.new(0,35,0,35)
avatar.Position = UDim2.new(0,5,0.5,-17)
avatar.BackgroundTransparency = 1
avatar.Image = "rbxthumb://type=AvatarHeadShot&id="..player.UserId.."&w=150&h=150"

local nameText = Instance.new("TextLabel", profile)
nameText.Size = UDim2.new(0.6,0,1,0)
nameText.Position = UDim2.new(0,50,0,0)
nameText.BackgroundTransparency = 1
nameText.Text = player.Name.." | LV.24 Warrior"
nameText.TextColor3 = Color3.fromRGB(255,255,255)
nameText.Font = Enum.Font.GothamBold
nameText.TextSize = 16
nameText.TextXAlignment = Enum.TextXAlignment.Left
