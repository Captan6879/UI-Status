local player = game.Players.LocalPlayer
local players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HoloUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame (Draggable + Resizable)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 300)
mainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true -- üîπ ‡∏ó‡∏≥‡πÉ‡∏´‡πâ‡∏•‡∏≤‡∏Å‡πÑ‡∏î‡πâ
mainFrame.Parent = screenGui

-- Corners
local uiCorner = Instance.new("UICorner", mainFrame)
uiCorner.CornerRadius = UDim.new(0, 20)

-- Gradient Glow
local gradient = Instance.new("UIGradient", mainFrame)
gradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(155, 77, 255)), -- ‡∏°‡πà‡∏ß‡∏á
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 212, 255))   -- ‡∏ü‡πâ‡∏≤
}
gradient.Rotation = 45

-- Stroke Glow (‡∏Ç‡∏≠‡∏ö‡πÄ‡∏£‡∏∑‡∏≠‡∏á‡πÅ‡∏™‡∏á)
local stroke = Instance.new("UIStroke", mainFrame)
stroke.Thickness = 4
stroke.Color = Color3.fromRGB(155, 77, 255)
stroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
stroke.Transparency = 0.3

-- Title Bar
local title = Instance.new("TextLabel")
title.Text = "üîÆ Pupakorn Control Panel"
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.fromRGB(200, 200, 255)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.Parent = mainFrame

-- Tab Buttons
local tabBar = Instance.new("Frame", mainFrame)
tabBar.Size = UDim2.new(1, -20, 0, 40)
tabBar.Position = UDim2.new(0, 10, 0, 50)
tabBar.BackgroundTransparency = 1

local tabs = {"Status", "Teleport", "Inventory"}
local activeTab = nil

-- Content Frame
local contentFrame = Instance.new("Frame", mainFrame)
contentFrame.Size = UDim2.new(1, -20, 1, -100)
contentFrame.Position = UDim2.new(0, 10, 0, 100)
contentFrame.BackgroundTransparency = 1

-- Layout Tabs
local xOffset = 0
for _, tabName in ipairs(tabs) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 100, 1, 0)
    btn.Position = UDim2.new(0, xOffset, 0, 0)
    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
    btn.Text = tabName
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.Parent = tabBar

    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0, 10)

    btn.MouseButton1Click:Connect(function()
        for _, child in ipairs(contentFrame:GetChildren()) do
            if child:IsA("Frame") then child.Visible = false end
        end
        local page = contentFrame:FindFirstChild(tabName.."Page")
        if page then page.Visible = true end
    end)

    xOffset = xOffset + 110
end

-- Status Page
local statusPage = Instance.new("Frame")
statusPage.Name = "StatusPage"
statusPage.Size = UDim2.new(1,0,1,0)
statusPage.BackgroundTransparency = 1
statusPage.Parent = contentFrame

local hp = Instance.new("TextLabel", statusPage)
hp.Text = "HP: ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñí‚ñí‚ñí‚ñí 70%"
hp.Size = UDim2.new(1,0,0,30)
hp.TextColor3 = Color3.fromRGB(255,255,255)
hp.Font = Enum.Font.Gotham
hp.TextSize = 16
hp.BackgroundTransparency = 1

local st = hp:Clone()
st.Text = "Stamina: ‚ñà‚ñà‚ñà‚ñà‚ñí‚ñí‚ñí‚ñí‚ñí‚ñí 40%"
st.Position = UDim2.new(0,0,0,30)
st.Parent = statusPage

-- Teleport Page
local teleportPage = Instance.new("Frame")
teleportPage.Name = "TeleportPage"
teleportPage.Size = UDim2.new(1,0,1,0)
teleportPage.BackgroundTransparency = 1
teleportPage.Visible = false
teleportPage.Parent = contentFrame

local tpLabel = Instance.new("TextLabel", teleportPage)
tpLabel.Text = "Teleport Menu"
tpLabel.Size = UDim2.new(1,0,0,30)
tpLabel.TextColor3 = Color3.fromRGB(255,255,255)
tpLabel.Font = Enum.Font.GothamBold
tpLabel.TextSize = 18
tpLabel.BackgroundTransparency = 1

local playerList = Instance.new("ScrollingFrame", teleportPage)
playerList.Size = UDim2.new(1,-20,1,-40)
playerList.Position = UDim2.new(0,10,0,40)
playerList.CanvasSize = UDim2.new(0,0,0,0)
playerList.ScrollBarThickness = 6
playerList.BackgroundTransparency = 1

local layout = Instance.new("UIListLayout", playerList)
layout.Padding = UDim.new(0,5)

-- ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏õ‡∏∏‡πà‡∏° Teleport ‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô
local function addPlayerRow(target)
    if target == player then return end
    local row = Instance.new("Frame", playerList)
    row.Size = UDim2.new(1,-10,0,50)
    row.BackgroundColor3 = Color3.fromRGB(40,40,60)
    local corner = Instance.new("UICorner", row)
    corner.CornerRadius = UDim.new(0,10)

    local avatar = Instance.new("ImageLabel", row)
    avatar.Size = UDim2.new(0,40,0,40)
    avatar.Position = UDim2.new(0,5,0.5,-20)
    avatar.BackgroundTransparency = 1
    avatar.Image = "rbxthumb://type=AvatarHeadShot&id="..target.UserId.."&w=150&h=150"

    local name = Instance.new("TextLabel", row)
    name.Size = UDim2.new(0.5,-60,1,0)
    name.Position = UDim2.new(0,55,0,0)
    name.Text = target.Name
    name.TextColor3 = Color3.fromRGB(220,220,255)
    name.BackgroundTransparency = 1
    name.Font = Enum.Font.Gotham
    name.TextSize = 16
    name.TextXAlignment = Enum.TextXAlignment.Left

    local tpBtn = Instance.new("TextButton", row)
    tpBtn.Size = UDim2.new(0,100,0,30)
    tpBtn.Position = UDim2.new(1,-110,0.5,-15)
    tpBtn.Text = "Teleport"
    tpBtn.TextColor3 = Color3.fromRGB(255,255,255)
    tpBtn.BackgroundColor3 = Color3.fromRGB(155,77,255)
    tpBtn.Font = Enum.Font.GothamBold
    tpBtn.TextSize = 14
    local c = Instance.new("UICorner", tpBtn)
    c.CornerRadius = UDim.new(0,8)

    tpBtn.MouseButton1Click:Connect(function()
        if target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
            local root = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
            if root then
                root.CFrame = target.Character.HumanoidRootPart.CFrame + Vector3.new(2,0,0)
            end
        end
    end)
end

for _, plr in ipairs(players:GetPlayers()) do addPlayerRow(plr) end
players.PlayerAdded:Connect(addPlayerRow)

-- Profile Bar
